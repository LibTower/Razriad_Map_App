<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Внешняя черная рамка -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/razryad_black" />
            <corners android:radius="8dp" />
        </shape>
    </item>


    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/razryad_purple2"
                android:endColor="@color/razryad_purple"
                android:angle="270" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>